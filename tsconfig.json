{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": true,
    "lib": ["ES2020", "ESNEXT"],
    "module": "Node16",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "outDir": "dist-post-ts",
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strict": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ES2020"
  },
  "include": ["src"],
  "exclude": [
    "**/node_modules",
    "**/dist",
    "**/dist-post-ts",
    "**/build",
    "**/.*/"
  ]
}
